        ax4.set_yticks([])
        ax4.set_title("MBT Performance", fontsize=11, fontweight='bold')
    
    plt.suptitle("MBT THEORY: UNIVERSAL GRAVITATIONAL LENSING SURVEY", 
                 fontsize=16, fontweight='bold', y=0.98)
    plt.tight_layout(rect=[0, 0, 1, 0.96])
    plt.show()

