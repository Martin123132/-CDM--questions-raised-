    A, x0, y0, sx, sy, theta = params_6_gaussian[i*6:(i+1)*6]
    
    im = plt.imshow(gaussians_6[i], cmap='plasma', origin='lower')
    plt.title(f"Component {i+1}\nA={A:.4f}", fontsize=10)
